<!-- Made since the header would be used on all parts of the website (DRY) -->

<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <% if (user.email) {%>
        <span style="padding-left: 970px;"> Logged in As: <%= user.email %> </span>
        <form action="/logout", method="POST", class="form-inline", style="margin: 0 auto;"> 
          <button type="submit" class="btn btn-primary">Logout</button>
        </form>
      <% } else { %>
        <form action="/login", method="POST", class="form-inline", style="margin: 0 auto;  padding-left:  870px;">    
          <input class="form-control" type="text" name="username" placeholder="Username" style="margin: 1em">
          <button type="submit" class="btn btn-primary">Login</button>
        </form>
        <% } %>
    </div>
  </nav>
</header>